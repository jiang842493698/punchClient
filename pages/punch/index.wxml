                </view> -->
      </view>
    </view>
    <view class="mine_punch_title">
      我的打卡
    </view>

    <view class="mine_punch_list">
      <view class="mine_punch_content" wx:for="{{ data.active }}" wx:key="{{item._id}}">
        <view class='mine_punch_content_infos'>
          <view class="mine_punch_content_info">
            <view class="mine_punch_content_title">{{ item.name }}</view>
            <view class="mine_punch_content_top">打卡任务：每天{{item.punch[0].startTime}} — {{item.punch[0].endTime}}内打卡有效</view>
            <view class="mine_punch_content_date">打卡周期：{{ item.punch[0].startDateFormat }} — {{ item.punch[0].endDateFormat
              }}</view>
          </view>
          <view class="punch_people" wx:if="{{ !item.status }}">
            <form report-submit="true" bindsubmit="{{onParticipate?'onParticipate':''}}" data-index="{{ dateIndex }}" data-id='{{ data.punch._id }}'>
              <button class="operating_punch" formType="submit">参与打卡</button>
            </form>
          </view>
          <view class="punch_people" wx:else >

            <view wx:if="{{ item.punch[0].punchRecordTheDay == 0 && item.hasPunchTime }}">
              <form report-submit="true" bindsubmit="{{onPunch?'onPunch':''}}" data-index="{{ item.punch[0].dataIndex }}" data-id='{{ item.punch[0]._id }}'>
                <button class="operating_punch" formType="submit">点击打卡</button>
              </form>
            </view>
            <view wx:elif="{{ (item.punch[0].reserveTheDay == 0 && item.hasReserveTime) || (item.punch[0].reserveTheDay == 0 && item.punch[0].dataIndex < 0 && item.hasReserveTime)}}">
              <form report-submit="true" bindsubmit="{{onReserve?'onReserve':''}}" data-id='{{ item.punch[0]._id }}'  data-index="{{ item.punch[0].dataIndex}}">
                <button class="operating_punch reserve" formType="submit">预约打卡</button>
              </form>
            </view>
            <view wx:else class="operating_punch wait">等待打卡</view>
          </view>
        </view>
        <accordion-group wux-class="accordion_class">
          <accordion wux-class="accordion_class" onDetail="打开详情" offDetail="关闭详情">
            <view slot="header" class="mine_punch_content_cycle details">
              <view>已完成1个打卡周期</view>
            </view>
            <view class="punch_status_list">
              <view class='every_day' wx:for="{{ item.punch[0].punchRecord }}" wx:key="{{ item }}">
                <view>
                  <view class='punch_status_number'>第{{ index + 1 }}天</view>
                  <image class='punch_status_number_image' src='/images/daka_ok.png'></image>
                  <view class='punch_status_status'>已打卡</view>
                </view>
              </view>
              <view class='every_day' wx:for="{{ 7 - item.punch[0].punchRecord.length }}" wx:key="{{ item }}">
                <view>
                  <view class='punch_status_number'>第{{ index + 1 }}天</view>
                  <image class='punch_status_number_image' src='/images/daka_stay.png'></image>
                  <view class='punch_status_status'>未开始</view>
                </view>
              </view>
            </view>
          </accordion>
        </accordion-group>
      </view>
