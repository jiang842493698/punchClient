/* pages/punch/punchDetails/index.wxss */
page{
    background-color: #f6f6f6
}
.punch{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 90
}
.punch_title{
    margin-top: 20rpx;
    width: 700rpx;
    height: 240rpx;
    /* border: 1rpx solid red; */
    background-color: #fff;
    border-radius: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.punch_title_image{
    width: 90rpx;
    height: 90rpx;
    margin-left: 50rpx;
    border-radius: 50%; 
    overflow: hidden;
}
.punch_title_space{
    flex-shrink : 1;
}
.punch_title_name{
    font-size: 28rpx;
    width: 300rpx;
    margin-left: 35rpx;
}
.punch_title_content{
    font-size: 20rpx;
    margin-right: 45rpx;
    
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    color: #999999;
}
.mine_punch_title{
    margin-top: 5rpx;
    font-size: 28rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    color: #b4b4b4;

}
.mine_punch_content{
    width: 700rpx;
    height: 165rpx;
    background-color: #fff;
    border-radius: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

}
.mine_punch_content_info{
    margin-left: 50rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.mine_punch_content_title{
    font-size: 30rpx;
    font-weight: bold;
}
.mine_punch_content_top{
    font-size: 20rpx;
    color: #666666;
}
.mine_punch_content_date{
    font-size: 20rpx;
    color: #666666;
}
.punch_people_number{
    width: 54rpx;
    height: 54rpx;
    border : 7rpx solid #ff9933;
    border-radius: 50%; 
    margin-right: 45rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.operating{
    position: absolute;
    width: 100%;
    bottom: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.theme{
    height : 150rpx;
   
    font-size : 28rpx;
    color: #cccccc;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.operating_punch{
    width: 700rpx;
    height: 100rpx;
    border-radius: 10rpx;
    background-color: #00cc99;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    font-weight: bold;
    margin-bottom: 35rpx;
}
.reservation{
    background-color: #ff9933;
}
.wait{
    background-color: #bfbfbf;
}
.hook_image{
    border: 7rpx solid #00cc99
}
.hook{
    width: 40rpx;
    height: 40rpx;
}
.punch_people{
  font-size: 20rpx;
  margin-right: 45rpx;
  color: #666666;
}
.pop_ups{
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: rgba(0,0,0,0.6);
    
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 100;
}
.participation_instructions{
    width: 700rpx;
    height: 600rpx;
    background: #fff;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    border-radius: 12rpx;
    align-items: center;

}
.pop_ups_title{
    width: 100%;
    height: 130rpx;
    font-size: 34rpx;
    font-weight: bold;
    line-height: 130rpx;
    text-align: center;
}
.pop_ups_content{
    margin-top: 25rpx;
    width: 600rpx;
}
.pop_ups_content_list{
    display: flex;
    flex-direction: row;
    justify-content: space-between;


}
.pop_ups_contents{
    width: 145rpx;
    height: 230rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    
}
.pop_ups_image{
    width: 140rpx;
    height: 140rpx;
}
.image_content{
    width: 145rpx;
    height: 145rpx;
}
.punch_Introduction{
    font-Size : 20rpx;
    text-align: center;
    color: #999999;
}
.prompt{
    height: 80rpx;
    font-size: 20rpx;
    text-align: center;
    line-height: 120rpx;
    color: #cccccc;
}
.confirm{
    width: 100%;
    height: 100rpx;
    background-color: #00cc99;
    color: #fff;
    border-radius: 30rpx;
    text-align: center;
    line-height: 100rpx;
    font-weight: bold;
}
.give_up{
    margin-top: 20rpx;
    width: 600rpx;
    height: 100rpx;
    border-radius: 30rpx;
    text-align: center;
    line-height: 100rpx;
    color: #e4e4e4;
}